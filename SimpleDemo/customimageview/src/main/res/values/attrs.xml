<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomImageView">
        <!--全圆角半径大小-->
        <attr name="civCornerRadius" format="dimension"/>
        <!--左上圆角半径大小-->
        <attr name="civCornerTopLeft" format="dimension"/>
        <!--右上圆角半径大小-->
        <attr name="civCornerTopRight" format="dimension"/>
        <!--左下圆角半径大小-->
        <attr name="civCornerBottomLeft" format="dimension"/>
        <!--右下圆角半径大小-->
        <attr name="civCornerBottomRight" format="dimension"/>
        <!--边框宽度-->
        <attr name="civBorderWidth" format="dimension"/>
        <!--边框颜色-->
        <attr name="civBorderColor" format="color"/>
    </declare-styleable>




</resources>